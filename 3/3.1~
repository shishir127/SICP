(define (make-accumulator sum)
	(define (add num)
		(set! sum (+ sum num))
	)
	(define (remove num)
		(set! sum (- sum num))
	)
	(define (dispatch msg)
		(cond ((eq? msg 'add)     add)
		      ((eq? msg 'remove)     remove)
		      (else (error "Unknown request -- MAKE_ACCUMULATOR" msg))
		)
	)
	add
)
